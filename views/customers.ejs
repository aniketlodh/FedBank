<%- include("./partials/header"); %>
<div class="container">
    <% if(danger && danger.length > 0){ %>
        <div class="alert alert-danger" role="alert">
            <%= danger %>
        </div>
    <% } %>
</div>
<div class="container">
    <table>
        <tr>
            <th>Sl. No.</th>
            <th>Customer Name</th>
            <th>Email</th>
            <th>Balance</th>
            <th>Action</th>
        </tr>
    <% custs.forEach(function(customer,i){ %>
        <tr>
            <td><%= i+1 %></td>
            <td><%= customer.name %></td>
            <td><%= customer.email %></td>
            <td><%= customer.balance %></td>
            <td><a href="/transact/<%=customer._id%>" role="button" class="btn btn-primary">Transact</a></td>
        </tr>      
    <% }) %>
    </table>    
</div>



<%- include("./partials/footer"); %>